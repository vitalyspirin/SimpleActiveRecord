{
    "name": "vitalyspirin/yii2-simpleactiverecord",
    "type": "yii2-extension",
    "description": "Extension of Yii2 ActiveRecord with added automatically generaged validators",
    "keywords": ["activerecord","active record", "simpleactiverecord", "simple active record"],
    "homepage": "https://github.com/vitalyspirin/yii2-simpleactiverecord",
    "authors": [
        {
            "name": "Vitaly Spirin",
            "email": "vitaly.spirin@gmail.com",
            "homepage": "https://github.com/vitalyspirin",
            "role": "Developer"
        }
    ],
    
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": ">=2.0.5"
    },
     "require-dev": {
        "yiisoft/yii2-gii": "~2.0",
        "phpunit/phpunit": "4.8.*",
        "friendsofphp/php-cs-fixer": "^1.11"
    },
    
    "autoload": {
        "psr-4": {
            "vitalyspirin\\yii2\\simpleactiverecord\\": "src/"
        }
    },
    
    "scripts": {
        "fix": "vendor/bin/php-cs-fixer fix -v --level=psr2 --fixers=single_quote,new_with_braces,operators_spaces,phpdoc_short_description,phpdoc_separation,return,concat_with_spaces,spaces_before_semicolon,multiline_spaces_before_semicolon,unused_use,ordered_use,whitespacy_lines .",
        "test": "vendor/bin/phpunit --configuration tests --coverage-html tests/codecoverage tests/unit/"
    }
}
